<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      {{#each model.downloadedPosts as |post|}}
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">{{post.title}}
              <span title="Save Post" {{action 'savePost' post}} class="pull-right hand glyphicon glyphicon-save" aria-hidden="true"></span></h3>
          </div>
          <div class="panel-body">
            {{{post.body}}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
